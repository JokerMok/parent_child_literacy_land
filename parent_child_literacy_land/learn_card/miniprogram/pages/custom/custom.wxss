page { background-color: #F2F4F7; }
.container { padding: 30rpx; }

/* 头部卡片 */
.header-card {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.03);
  margin-bottom: 40rpx;
}

.header-info {
  padding: 10px;
}
.h1 { font-size: 40rpx;
  font-weight: 800;
  color: #333;
  margin-bottom: 8rpx; }
.p { font-size: 26rpx;
  color: #999; }

.upload-btn {
  background: #FFD700;
  color: #333;
  font-weight: bold;
  font-size: 30rpx;
  padding: 16rpx 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.4);
  display: flex; align-items: center;
}
.plus { font-size: 40rpx; margin-right: 8rpx; margin-top: -6rpx; }

/* 网格布局 */
.grid-layout {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 两列 */
  gap: 24rpx;
}

.action-btn { padding: 10rpx; font-size: 28rpx; margin-left: 10rpx; }
.delete-btn { color: #ff4d4f; }
.edit-btn { color: #1890ff; }

.grid-item {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
}

/* 图片区域 */
.img-wrapper {
  position: relative;
  width: 100%;
  height: 280rpx;
  background: #eee;
}
.cover { width: 100%; height: 100%; }
.play-icon {
  position: absolute;
  bottom: 16rpx; right: 16rpx;
  width: 50rpx; height: 50rpx;
  background: rgba(0,0,0,0.5);
  border-radius: 50%;
  color: #fff; text-align: center; line-height: 50rpx;
  font-size: 24rpx; backdrop-filter: blur(4px);
}

/* 底部文字区 */
.item-footer {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.item-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden; text-overflow: ellipsis; white-space: nowrap;
  display: flex; align-items: center;
}
.edit-icon { font-size: 24rpx; color: #ccc; margin-left: 8rpx; }

.delete-icon {
  padding: 10rpx;
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 空状态 */
.empty-state { text-align: center; margin-top: 150rpx; color: #999; font-size: 28rpx; }
.empty-img { width: 200rpx; height: 200rpx; opacity: 0.3; margin-bottom: 20rpx; }