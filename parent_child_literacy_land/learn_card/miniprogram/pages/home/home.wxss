/* 首页样式：简单清爽 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f0f8ff; /* 淡蓝色背景 */
}

.logo-area {
  margin-bottom: 100rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
  display: block;
}

.start-btn {
  background-color: #FFD700; /* 金黄色 */
  color: #333;
  font-weight: bold;
  padding: 20rpx 60rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}