page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  overflow: hidden;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 0 40rpx;
  position: relative;
}

/* èƒŒæ™¯è£…é¥°å…ƒç´  */
.container::before,
.container::after {
  content: '';
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.container::before {
  width: 400rpx;
  height: 400rpx;
  top: 10%;
  left: 10%;
  animation-delay: 0s;
}

.container::after {
  width: 300rpx;
  height: 300rpx;
  bottom: 15%;
  right: 15%;
  animation-delay: 3s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-30rpx) scale(1.05);
  }
}

.logo-area {
  margin-bottom: 120rpx;
  text-align: center;
  z-index: 1;
}

.title {
  font-size: 56rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
  margin-bottom: 24rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  background: linear-gradient(135deg, #ffd700, #ffed4e);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 0;
  display: block;
  line-height: 1.6;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.start-btn {
  background: linear-gradient(135deg, #ffd700, #ffed4e);
  color: #2c3e50;
  font-weight: 600;
  font-size: 32rpx;
  padding: 30rpx 80rpx;
  border-radius: 60rpx;
  box-shadow: 0 12rpx 30rpx rgba(255, 215, 0, 0.4);
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.start-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
  z-index: -1;
}

.start-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 8rpx 20rpx rgba(255, 215, 0, 0.3);
}

.start-btn:active::before {
  left: 100%;
}

