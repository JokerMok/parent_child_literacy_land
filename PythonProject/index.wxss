.container {
  position: relative;
  width: 100%;
  height: 100vh;
}

.background-image {
  width: 100%;
  height: 100%;
  display: block;
}

.clickable-area {
  position: absolute;
  background-color: transparent;  /* 透明背景 */
  border: 2rpx solid #ff0000;     /* 可选：红色边框用于调试 */
  border-radius: 10rpx;           /* 可选：圆角 */
  box-sizing: border-box;
}

.area-label {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #ff0000;
  font-size: 24rpx;
  pointer-events: none;  /* 防止标签影响点击事件 */
}
